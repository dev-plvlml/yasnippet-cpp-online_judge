# -*- mode: snippet -*-
# name: Binomial Coefficient (floating point)
# key: comb
# --
template <typename T, typename FP = double>
T Comb(T n0, T k0, FP eps = 0.1) {
  if (k0 > n0)
    return 0;
  FP result = 1.0;
  if (k0 > n0 - k0) {
    k0 = n0 - k0;
  }
  for (FP k = 1.0, n = n0 - k0 + 1; k <= k0; ++k, ++n) {
    result *= n / k;
  }
  return result + eps;
}
